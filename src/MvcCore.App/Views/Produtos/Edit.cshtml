@model MvcCore.App.ViewModels.ProdutoViewModel

@{ ViewData["Title"] = "Editar Produto"; }

<h2 class="text-center font-weight-bold font-daysOne">
    <span class="fas fa-pencil-alt"></span> @ViewData["Title"]
</h2>

<hr />
<form asp-action="Edit" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">

            <vc:Summary></vc:Summary>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Fornecedor.Nome" class="control-label"></label>
                <input asp-for="Fornecedor.Nome" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea cols="40" rows="5" asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="col-md-3">
                    <label>Imagem Atual</label><br />
                    <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 80px; height: 80px;" />
                    <span asp-validation-for="Imagem" class="text-danger"></span>
                </div>
                <div class="col-md-9 d-flex align-items-end">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="ImagemUpload" asp-for="ImagemUpload" />
                        <label data-browse="Procurar" class="custom-file-label" for="ImagemUpload"></label>
                        <label style="display: none;" id="imagem_nome"></label>
                    </div>
                    <span asp-validation-for="ImagemUpload" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group d-flex justify-content-center align-items-center mt-5">
        <button type="submit" class="btn btn-success">
            <span class="fa fa-check"></span> Salvar
        </button>&nbsp;
        <a class="btn btn-dark" href="javascript:window.history.back();">Voltar</a>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $("#ImagemUpload").change(function () {
            $("#imagem_nome").text(this.files[0].name);
            $("#imagem_nome")[0].style.display = 'block';
        });
    </script>
}
