@model MvcCore.App.ViewModels.ProdutoViewModel

@{ ViewData["Title"] = "Detalhes do Produto"; }

<h2 class="text-center font-weight-bold font-daysOne">
    <span class="fas fa-search"></span> @ViewData["Title"] 
</h2>

<hr />

<div class="row">

    <div class="col-md-4">
        <img src="~/imagens/@Model.Imagem" style="max-width: 100%;" />
    </div>

    <div class="col-md-6">

        <dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fornecedor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fornecedor.Nome)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Valor)
            </dt>
            <dd class="col-sm-10">
                @Model.Valor.ToString("C")
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ativo)
            </dd>

        </dl>

        <div>
            <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
            <a class="btn btn-dark" href="javascript:window.history.back();">Voltar</a>
        </div>

    </div>
</div>
