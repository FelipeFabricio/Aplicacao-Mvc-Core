@model MvcCore.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Cadastrar Fornecedor";
}

<h2 class="text-center font-weight-bold font-daysOne">
    <span class="fas fa-shipping-fast"></span> @ViewData["Title"]
</h2>

<hr />
<form asp-action="Create">
    <div class="row">
        <div class="col-md-6">

            <h4>Informações</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Documento" class="control-label"></label>
                <input asp-for="Documento" class="form-control" />
                <span asp-validation-for="Documento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipoFornecedor" class="control-label"></label><br />
                <input type="radio" value="1" asp-for="TipoFornecedor" checked /> Pessoa Física<br />
                <input type="radio" value="2" asp-for="TipoFornecedor" /> Pessoa Jurídica
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
        </div>

        <div class="col-md-6">
            <h4>Endereço</h4>
            <hr />
            <partial name="_Endereco" />
        </div>
    </div>
    <div class="form-group d-flex justify-content-center align-items-center">
        <button type="submit" class="btn btn-success">
            <span class="fa fa-check"></span> Cadastrar
        </button>&nbsp;
        <a type="button" asp-action="Index" class="btn btn-dark">Voltar</a>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
